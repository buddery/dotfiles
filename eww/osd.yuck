(defvar osd "{ \"icon\": \"ó°•¾\", \"value\": 0 }")
(defwidget osd [] (eventbox
    :onclick "${EWW_CONFIG_DIR}/scripts/osd close"
    (box :class "osd-widget"
        (overlay
            (progress
                :class "scale"
                :value {osd.value}
                :valign "CENTER"
                :halign "CENTER"
                :orientation "v"
                :flipped true
            )
            (label 
                :text {osd.icon}
                :valign "END" 
                :halign "CENTER"
                :class "icon"
            )
        )
    )
))

(defwindow osd
   :monitor 0
   :stacking "fg"
 namespace "eww_osd"
   :geometry (geometry :width "1%"
                       :hight "1%"
                       :anchor "center right") (osd))

